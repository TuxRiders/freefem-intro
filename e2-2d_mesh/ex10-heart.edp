func real phix (real t)
{
	return 16 * sin(t)^3;
}

func real phiy (real t)
{
	return 13 * cos(t) - 5 * cos(2*t) - 2 * cos(3*t) - cos(4*t);
}

border C(t=-pi, pi)
{
	x = phix(t);	y = phiy(t);
}

for (int i = 1; i < 30; i++)
{
  mesh Th = buildmesh(C(-i*5));
  plot(Th, wait=1);
}
